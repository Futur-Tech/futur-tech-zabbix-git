<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2022-03-14T01:00:09Z</date>
    <groups>
        <group>
            <name>Templates/Futur-Tech/Modules Linux</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Futur-Tech Module Git-All Status</template>
            <name>Template Futur-Tech Module Git-All Status</name>
            <description>https://github.com/Futur-Tech/futur-tech-zabbix-git</description>
            <groups>
                <group>
                    <name>Templates/Futur-Tech/Modules Linux</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Software Updates</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Git repository fetch</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.run[sudo {$GIT_SRC}/futur-tech-zabbix-git/git-all fetch]</key>
                    <delay>8h</delay>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>The script git-all will fetch all the git repositories located in {$GIT_SRC}</description>
                    <applications>
                        <application>
                            <name>Software Updates</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>DISCARD_UNCHANGED</type>
                            <params/>
                        </step>
                    </preprocessing>
                </item>
                <item>
                    <name>Git repository status</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.run[sudo {$GIT_SRC}/futur-tech-zabbix-git/git-all qstatus | grep -vE &quot;^Repo .* No changes$&quot;]</key>
                    <delay>15m</delay>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>The script git-all will check the status of all the git repositories located in {$GIT_SRC}</description>
                    <applications>
                        <application>
                            <name>Software Updates</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>DISCARD_UNCHANGED</type>
                            <params/>
                        </step>
                    </preprocessing>
                    <triggers>
                        <trigger>
                            <expression>{iregexp(Repo .+: Needs pushing:)}=1</expression>
                            <name>Git repository need pushing to main branch</name>
                            <opdata>Log: {ITEM.LASTVALUE1}</opdata>
                            <priority>INFO</priority>
                            <description>This is normal, when a repo is not running on the main branch (usually during development or testing)</description>
                            <dependencies>
                                <dependency>
                                    <name>Git repository not up-to-date</name>
                                    <expression>{Template Futur-Tech Module Git-All Status:system.run[sudo {$GIT_SRC}/futur-tech-zabbix-git/git-all qstatus | grep -vE &quot;^Repo .* No changes$&quot;].regexp(Repo .+: Needs merging:)}=1</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{regexp(Repo .+: Needs merging:)}=1</expression>
                            <name>Git repository not up-to-date</name>
                            <opdata>Log: {ITEM.LASTVALUE1}</opdata>
                            <priority>WARNING</priority>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$GIT_SRC}</macro>
                    <value>/usr/local/src</value>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
